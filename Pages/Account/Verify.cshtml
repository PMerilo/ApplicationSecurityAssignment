@page
@using AspNetCore.ReCaptcha;
@model ApplicationSecurityAssignment.Pages.Account.VerifyModel
@{
}
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (Model.Provider == "Email")
    {
        <div class="form-floating">
            <input asp-for="Destination" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Destination" class="form-label"></label>
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
    } else
    {
        <div class="form-floating">
            <input asp-for="Provider" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Provider" class="form-label"></label>
            <span asp-validation-for="Provider" class="text-danger"></span>
        </div>
    }
    <div class="form-floating">
        <input asp-for="OTP" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="OTP" class="form-label"></label>
        <span asp-validation-for="OTP" class="text-danger"></span>
    </div>
    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
    @Html.ReCaptcha()
</form>